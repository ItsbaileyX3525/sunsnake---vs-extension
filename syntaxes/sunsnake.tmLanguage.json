{
	"name": "sunsnake",
	"scopeName": "source.ss",
	"fileTypes": ["ss"],
  
	"patterns": [
	  {
		"include": "#comments"
	  },
	  {
		"include": "#strings"
	  },
	  {
		"include": "#numbers"
	  },
	  {
		"include": "#operators"
	  },  
	  {
		"include": "#functionName"
	  },
	  {
		"include": "#keywords"
	  },
	  {
		"include": "#punctuation"
	  }
	],
  
	"repository": {
	  "comments": {
		"patterns": [
		  {
			"name": "comment.line",
			"match": "#.*$"
		  }
		]
	  },
	  "strings": {
		"patterns": [
		  {
			"name": "string.quoted.single",
			"begin": "'",
			"end": "'"
		  },
		  {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\""
		  }
		]
	  },
	  "numbers": {
		"patterns": [
		  {
			"name": "constant.numeric",
			"match": "\\b\\d+\\b"
		  }
		]
	  },
	  "operators": {
		"patterns": [
		  {
			"name": "keyword.operator",
			"match": "\\+|-|\\*|\\/|\\="
		  }
		]
	  },	  
	  "functionName": {
		"patterns": [
		  {
			"name": "entity.name.function",
			"match": "(?<=\\bdef\\s)\\w+(?=\\()"
		  },
		  {
			"name": "entity.name.function",
			"match": "(?<=\\bdef\\s)\\w+(?=\\s*:\\s*)"
		  }
		]
	  },
	  "keywords": {
		"patterns": [
		  {
			"name": "keyword",
			"match": "\\b(def|True|False)\\b"
		  },
		  {
			"name": "keyword.control",
			"match": "\\b(while|for|if|else|in)\\b"
		  }
		]
	},		
	  "punctuation": {
		"patterns": [
		  {
			"name": "punctuation",
			"match": "\\(|\\)|\\{|\\}|\\[|\\]|,|;|:"
		  }
		]
	  }
	}
  }
  